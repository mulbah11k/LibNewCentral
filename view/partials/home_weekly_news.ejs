<div class="weekly-news-area pt-50">
  <div class="container">
    <div class="weekly-wrapper">
      <!-- Section Title -->
      <div class="row">
        <div class="col-lg-12">
          <div class="section-tittle mb-30">
            <h3>Weekly Top News</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="weekly-news-active dot-style d-flex dot-style">
            <% news.forEach(function(item) { %>
              <div class="weekly-single">
                <div class="weekly-img">
                  <% if (item.imageUrl) { %>
                    <!-- Use the proxy route to fetch and display the image -->
                    <img src="/proxy-image?url=<%= encodeURIComponent(item.imageUrl) %>" alt="News Image" style="width: 100%;height: 200px;object-fit: cover;">
                <% } else { %>
                    <p>No image available for this news article.</p>
                <% } %>
                </div>
                <div class="weekly-caption">
                  <span class="color1"><%= item.source %></span>
                  <span class="color1 date_s"><%= new Date(item.releaseTime).toLocaleDateString() %></span>
                  <h4>
                    <a href="<%= item.link %>" target="_blank"><%= item.title.substring(0, 50) + "....." %></a>
                  </h4>
                  <div class="news-icons">
                    <!-- Details Icon -->
                    <a href="/details/<%= item.id %>" class="details-icon" title="Details">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
            
                    <!-- Similar News Icon -->
                    <a href="/similar/<%= item.id %>" class="similar-icon" title="Similar News">
                        <i class="fas fa-clone"></i> Similar News
                    </a>
                </div>
   
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
