<div class="trending-bottom">
  <div class="row">
      <% news.forEach(function(item) { %>
          <div class="col-lg-4">
              <div class="single-bottom mb-35">
                  <div class="trend-bottom-img mb-30">
                      <img src="/proxy-image?url=<%= item.imageUrl %>" alt="">
                  </div>
                  <div class="trend-bottom-cap">
                      <span class="color1"><%= item.source %></span>
                      <span class="color1 date_s"><%= new Date(item.releaseTime).toLocaleDateString() %></span>
                      <h4>
                          <a href="<%= item.link %>" target="_blank"><%= item.title %></a>
                      </h4>
                      <a href="/details/<%= item.id %>" id="details-btn">Details</a>
                  </div>
              </div>
          </div>
      <% }); %>
  </div>
</div>
