<div class="trending-bottom">
  <div class="row">
      <% news.forEach(function(item) { %>
          <div class="col-lg-4">
              <div class="single-bottom mb-35">
                  <div class="trend-bottom-img mb-30">
                    <% if (item.imageUrl) { %>
                        <!-- Use the proxy route to fetch and display the image -->
                        <img src="/proxy-image?url=<%= encodeURIComponent(item.imageUrl) %>" alt="News Image" style="max-width: 600px; height: auto;">
                    <% } else { %>
                        <p>No image available for this news article.</p>
                    <% } %>
                  </div>
                  <div class="trend-bottom-cap">
                      <span class="color1"><%= item.source %></span>
                      <span class="color1 date_s"><%= new Date(item.releaseTime).toLocaleDateString() %></span>
                      <h4>
                          <a href="<%= item.link %>" target="_blank"><%= item.title.substring(0, 50) + "....." %></a>
                      </h4>
                      <div class="news-icons">
                        <!-- Details Icon -->
                        <a href="/details/<%= item.id %>" class="details-icon" title="Details">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                
                        <!-- Similar News Icon -->
                        <a href="/similar/<%= item.id %>" class="similar-icon" title="Similar News">
                            <i class="fas fa-clone"></i> Similar News
                        </a>
                    </div>
                  </div>
              </div>
          </div>
      <% }); %>
  </div>
</div>

