<div class="recent-articles">
  <div class="container">
    <div class="recent-wrapper">
      <!-- section Title -->
      <div class="row">
        <div class="col-lg-12">
          <div class="section-tittle mb-30">
            <h3>Recent Articles</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="recent-active dot-style d-flex">
            <% news.forEach(function(item) { %>
              <div class="single-recent mb-100">
                <div class="what-img">
                  <% if (item.imageUrl) { %>
                    <!-- Use the proxy route to fetch and display the image -->
                    <img src="/proxy-image?url=<%= encodeURIComponent(item.imageUrl) %>" alt="News Image" style="max-width: 600px; height: auto;">
                <% } else { %>
                    <p>No image available for this news article.</p>
                <% } %>

                </div>
                <div class="what-cap">
                  <span class="color1"><%= item.source || 'Night party' %></span>
                  <h4>
                    <a href="<%= item.link || '#' %>"><%= item.title || 'Welcome To The Best Model Winner Contest' %></a>
                  </h4>
                  <div class="news-icons">
                    <!-- Details Icon -->
                    <a href="/details/<%= item.id %>" class="details-icon" title="Details">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
            
                    <!-- Similar News Icon -->
                    <a href="/similar/<%= item.id %>" class="similar-icon" title="Similar News">
                        <i class="fas fa-clone"></i> Similar News
                    </a>
                </div>              </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.recent-active').slick({
      dots: true,
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 1
    });
  });
</script>
