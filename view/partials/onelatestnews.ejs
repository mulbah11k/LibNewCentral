<div class="trending-top mb-30">
  <div class="trend-top-img">
      <!-- Use the proxy route to fetch and display the image -->
      <img src="/proxy-image?url=<%= encodeURIComponent(news.imageUrl) %>" alt="News Image" style="max-width: 600px; height: auto;">

      <div class="trend-top-cap">
          <span><%= news ? news.source : 'Unknown Source' %></span>
          <span class="color1 date_s"><%= new Date(news.releaseTime).toLocaleDateString() %></span>
          <h2>
              <a href="<%= news.link %>"><%= news ? news.title : 'No title available' %><</a>
          </h2>
          <div class="news-icons">
            <!-- Details Icon -->
            <a href="/details/<%= news.id %>" class="details-icon" title="Details">
                <i class="fas fa-info-circle"></i> Details
            </a>
    
            <!-- Similar News Icon -->
            <a href="/similar/<%= news.id %>" class="similar-icon" title="Similar News">
                <i class="fas fa-clone"></i> Similar News
            </a>
        </div>     </div>
  </div>
</div>
